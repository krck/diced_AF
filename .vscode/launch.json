{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ACM0 (gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "launchCompleteCommand": "None",
            "preLaunchTask": "make all",
            "program": "${workspaceFolder}/bin/main.elf",
            // "args": [],
            // "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            // "environment": [],
            // "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/avr-gdb",
            "miDebuggerServerAddress": "/dev/ttyACM0",
            "setupCommands": [
                {
                    "description": "Set baud rate",
                    "text": "-gdb-set serial baud 115200",
                    "ignoreFailures": false
                },
                {
                    "description": "Remote debug enable",
                    "text": "-gdb-set debug remote 1",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}